<h1>Games</h1>
<ul>
  <% @games.each do |game|  %>
    <li><%= link_to game.name, game_path(game)  %>
    <% if logged_in? %>
      <% if is_owned?(game) %>
        <%= link_to("Add", ownerships_path(current_user: current_user.id, game: game.id), method: :post) %></li>
      <% else %>
        remove
      <% end %>
    <% end %>
  <% end %>
</ul>

<%= will_paginate @games %>
