<h1>Users</h1>
<% unless logged_in? %>
<%= link_to "Sign Up", new_user_path %> or <%= link_to "Log in", login_path %> to add friends
<% end %>
<ul>
  <% @users.each do |user|  %>
    <li><%= user.username  %>
      <% if is_friend?(user) %>
        <%= link_to "Profile", user  %>
      </li>
    <% elsif logged_in? %>
      <%= link_to("Add Friend", friendships_path(current_user: current_user.id, friend: user.id), method: :post) %>
    <% end %>
  <% end %>
</ul>
